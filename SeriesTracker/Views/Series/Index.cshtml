@model IEnumerable<SeriesTracker.Models.SeriesModel>

@{
    ViewData["Title"] = "Series";
}

<h2>Series</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DebutYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DebutYear.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilmType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language)
            </td>
        </tr>
}
    </tbody>
</table>
