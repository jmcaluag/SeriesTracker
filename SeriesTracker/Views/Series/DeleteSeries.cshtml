@model IEnumerable<SeriesTracker.Models.SeriesModel>

@{
    ViewData["Title"] = "DeleteSeries";
}

<h1>DeleteSeries</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SeriesID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DebutYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SeriesID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DebutYear)
            </td>
            <td>
                <a asp-controller="Series" asp-action="ExecuteDeleteSeries" asp-route-id="@item.SeriesID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
